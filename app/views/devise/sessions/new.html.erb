<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
<div class='form-all'>
  <div class='form-semi-all'>
    <h1 class='form-all-text'>
      Log in
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-team">
    <div class='form-string-wrap'>
      <label class="form-string">Email</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.email_field :email, class:"input-confirm", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-team">
    <div class='form-string-wrap'>
      <label class="form-string">Password</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.password_field :password, class:"input-confirm", id:"password", placeholder:"Passwordを入力" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "Log in" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>