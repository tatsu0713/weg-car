<%= render "shared/second-header"%>


<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Sign up
    </h1>
  </div>
  <%= render 'shared/error_messages', model: @user %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) クルマ太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"8文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含む設定</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password Confirmation</label>
      <span class="indispensable">※</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Favorite Car</label>
      <span class="indispensable">※</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:favorite_car_id, FavoriteCar.all, :id, :name, {}, {class:"input-favorite-car", id:"favorite-car-name"})%>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "Sign up" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
