<%= render "shared/header" %>
<div class='main'>
  <div class='title-contents'>
    <div class='nav'>
      <ul class='lists-right'>
        <%# <li class="category-list" id="lists">Category
        </li> %>
        <% if user_signed_in? %>
          <li><%= link_to current_user.nickname, "#" , class: "user-nickname" %></li>
          <li><%= link_to 'Log out', destroy_user_session_path , method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'Log in', new_user_session_path , class: "login" %></li>
          <li><%= link_to 'Sign up', new_user_registration_path , class: "sign-up" %></li>
        <% end %>
      </ul>
      <%# <ul class="show-lists hidden" id="pull-down">
        <li class='pull-down-list'>フォルクスワーゲン</li>
        <li class='pull-down-list'>アウディ</li>
        <li class='pull-down-list'>メルセデスベンツ</li>
        <li class='pull-down-list'>BMW</li>
      </ul> %>
    </div>
    <div class='nav-second'>
      <div class='service-title'>
        Welcome to
      </div>
      <div class='service-sub-title'>
        Weg
      </div>
      <div class='service-explain'>
        一生の繋がりを車と共に
      </div>
    </div>
  </div>

  <div class='sub'>
    <div class='center-contents'>
      <div class='center-topic-contents'>
        <div class='center-first-contents'>
          <div class='first-content'>
          </div>
          <div class='first-white-content'>
          </div>
        </div>
        <div class='center-second-contents'>
          <div class='second-white-content'>
          </div>
          <div class='second-content'>
          </div>
        </div>
        <div class='center-third-contents'>
          <div class='third-content'>
          </div>
          <div class='third-white-content'>
          </div>
        </div>
      </div>
    </div>
    <div class='item-contents'>
      <h2 class='new-title'>Post List</h2>
      <ul class='item-lists'>
      <% if @tweet.present? %>
        <% @tweet.each do |tweet| %>
          <li class='list'>
            <%= link_to tweet_path(tweet.id) do %>
            <div class='item-img-content'>
              <%= image_tag tweet.image, class: "item-img" %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= tweet.title %>
              </h3>
              <div class='item-price'>
                <%# <span><%= "販売価格" %>
                <div class='star-btn'>
                  <%# <%= image_tag "star.png", class:"star-icon" %>
                  <%# <span class='star-count'>0</span> %>
                </div>
              </div>
            </div>
            <% end %>
          </li>
        <% end %>
      <% else %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            投稿ヨロピク
          </h3>
          <div class='item-price'>
            <%# <span>99999999円<br>(税込み)</span> %>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      </ul>
      <% if user_signed_in? %>
      <%= link_to 'Post', new_tweet_path, class: "tweet" %>
      <% else %>
      <%= link_to 'Post', new_user_session_path, class: "tweet" %>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>